<!DOCTYPE html>
<html>
<head>
    <title>Portfolio Management</title>
    <link rel="stylesheet" href="styles.css">
</head>
<body>
    <h1>Ihr Portfolio</h1>
    <form action="/addPosition" method="post">
        <input type="text" name="isin" placeholder="ISIN" required>
        <input type="text" name="name" placeholder="Name der Aktie" required>
        <input type="number" step="0.01" name="purchase_price" placeholder="Kaufwert" required>
        <input type="number" name="quantity" placeholder="Menge" required>
        <button type="submit">Position hinzufügen</button>
    </form>
    <table>
        <thead>
            <tr>
                <th>ISIN</th>
                <th>Name</th>
                <th>Kaufwert</th>
                <th>Menge</th>
                <th>Aktueller Preis</th>
                <th>Positionswert</th>
            </tr>
        </thead>
        <tbody>
            <% positions.forEach(function(position) { %>
                <tr>
                    <td><%= position.isin %></td>
                    <td><%= position.name %></td>
                    <td><%= position.purchase_price %> €</td>
                    <td><%= position.quantity %></td>
                    <td><%= position.currentPrice %> €</td>
                    <td><%= (position.currentPrice * position.quantity).toFixed(2) %> €</td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</body>
</html>